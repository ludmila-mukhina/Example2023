<Page x:Class="WpfApp3.PageReg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageReg" FontSize="24">

    <Grid>
        <StackPanel>
            <GroupBox Header="Введите имя">
                <TextBox Name="TBName"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите фамилию">
                <TextBox Name="TBSurname"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите дату рождения">
                <DatePicker Name="DPdate"></DatePicker>
            </GroupBox>
            <GroupBox Header="Введите роль">
                <ComboBox Name="CBRole"></ComboBox>
            </GroupBox>
            <GroupBox Header="Введите логин">
                <TextBox Name="TBLogin"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Name="PBPass"></PasswordBox>
            </GroupBox>
            <Button Click="Button_Click">Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>
